<div class="name">
    Name: <%= @attendee.name %>
</div>
<div class="hobby">
    Hobby: <%= @attendee.hobby %>
</div>
<div class="profile">
    Profile: <%= @attendee.profile %>
</div>

<% unless current_user?(@attendee) %>
  <% if current_user.following?(@attendee) %>
    <%= link_to 'フォローを外す', user_relationships_path(@attendee.id), method: :delete, class: "btn btn-default" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(@attendee.id), method: :POST , class: "btn btn-primary"%>
  <% end %>
<% end %>
