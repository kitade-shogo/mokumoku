<div class="name">
    Name: <%= @organizer.name %>
</div>
<div class="hobby">
    Hobby: <%= @organizer.hobby %>
</div>
<div class="profile">
    Profile: <%= @organizer.profile %>
</div>

<% unless current_user?(@organizer) %>
  <% if current_user.following?(@organizer) %>
    <%= link_to 'フォローを外す', user_relationships_path(@organizer.id), method: :delete, class: "btn btn-default" %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(@organizer.id), method: :POST , class: "btn btn-primary"%>
  <% end %>
<% end %>